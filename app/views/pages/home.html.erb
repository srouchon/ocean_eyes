<div class="img-home">
  <%= image_tag "turtlehd.png", class: "home_image" %>
</div>

<div class="logohome text-center">
  <%= link_to ar_index_path do %>
    <%= image_tag "logo.svg", class: "logo" %>
  <% end %>
</div>

<div class="container container-full-height text-center">
  <%= render 'shared/searchbar' %>
  <h2 class="title">Suggestions</h2>

  <div class="row justify-content-center">
    <% @animals.each do |animal| %>
      <%= link_to animal_path(animal) do %>
        <div class="card-animal">
            <% if animal.image %>
              <div class="card-img">
                <%= image_tag animal.image, width: 200 %>
              </div>
              <div class="card-animal-infos">
                <h3><%= animal.common_name %></h3>
                <h4><i><%= animal.latin_name %></i></h4>
              </div>
            <% end %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="row justify-content-center">
    <div class="card-animal">
      <%= image_tag "barramoundi.jpg" %>
      <%= link_to ar_show_path({animal: "BarramundiFish", scale: 0.1}) do %>
      <%= image_tag "btn-3d.svg", class: "btn-3d" %>
      <% end %>
      <div class="card-animal-infos">
        <h3 class="titre3d">Barramundi</h3>
        <i class="i3d">Lates calcarifer</i>
      </div>
    </div>
  </div>

  <div class="explore-card text-center">
    <%= link_to habitats_path do %>
    <%= image_tag "carte_explore.png", class: "card-explore" %>
    <% end %>
  </div>
</div>

<%= render 'shared/footer' %>

