<div>
  <%#= video_tag "finaljellyfish.mp4", autoplay: :autoplay, loop: :loop, muted: :muted, class: "home_video" %>
  <video role="presentation" preload="auto" playsinline="" crossorigin="anonymous"
  loop=""
  muted=""
  <%-#id="comp-jw721e9lbalatamediavideovideo" %>
  class="home_video" width="1271" height="715"
  autoplay=""
  src="https://res.cloudinary.com/or1985/video/upload/v1599042119/finaljellyfish_rkahrv.mp4">

  </video>
</div>
<div class="logohome text-center">
  <%= link_to ar_index_path do %>
    <%= image_tag "logo.svg", class: "logo" %>
  <% end %>
</div>

<div class="container text-center">
  <%= render 'shared/searchbar' %>
  <h2 class="title">Suggestions</h2>

  <div class="row justify-content-center">
    <% @animals.each do |animal| %>
      <%= link_to animal_path(animal) do %>
        <div class="card-animal">
            <% if animal.image %>
              <div class="card-img">
                <%= image_tag animal.image, width: 200 %>
              </div>
              <div class="card-animal-infos">
                <h3><%= animal.common_name %></h3>
                <h4><i><%= animal.latin_name %></i></h4>
              </div>
            <% end %>
        </div>
      <% end %>
    <% end %>
  </div>

<div class="explore-card">
    <%= image_tag "carte_explore.png", class: "card-explore" %>
</div>

</div>



<%= render 'shared/footer' %>

