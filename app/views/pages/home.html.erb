<div>
  <%= video_tag "Jellyfish.mp4", autoplay: :autoplay, loop: :loop, muted: :muted, class: "home_video" %>
</div>

  <%= image_tag "logo.svg", class: "logo" %>


<div class="container text-center">
  <%= render 'shared/searchbar' %>
  <h2>Suggestions</h2>

  <div class="row justify-content-center">
    <% @animals.each do |animal| %>
      <%= link_to animal_path(animal) do %>
        <div class="card-animal">
            <% if animal.image %>
              <div class="card-img">
                <%= image_tag animal.image, width: 200 %>
              </div>
              <div class="card-animal-infos">
                <h2><%= animal.common_name %></h2>
                <h4><i><%= animal.latin_name %></i></h4>
              </div>
            <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>



    <%= render 'shared/footer' %>