<div>
  <%= video_tag "microjellyfish.mp4", autoplay: :autoplay, loop: :loop, muted: :muted, class: "home_video" %>
</div>

<%= link_to ar_show_path do %>
  <%= image_tag "logo.svg", class: "logo" %>
<% end %>

<div class="container text-center">
  <%= render 'shared/searchbar' %>
  <h2 class="title">Suggestions</h2>

  <div class="row justify-content-center">
    <% @animals.each do |animal| %>
      <%= link_to animal_path(animal) do %>
        <div class="card-animal">
            <% if animal.image %>
              <div class="card-img">
                <%= image_tag animal.image, width: 200 %>
              </div>
              <div class="card-animal-infos">
                <h3><%= animal.common_name %></h3>
                <h4><i><%= animal.latin_name %></i></h4>
              </div>
            <% end %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

<%= render 'shared/footer' %>

