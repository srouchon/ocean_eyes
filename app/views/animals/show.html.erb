<div class="logopage">
  <%= link_to root_path do %>
  <%= image_tag "logo_page.svg", class: "logo-page" %>
  <% end %>
</div>

<div class= 'container'>
  <div class="container-animal text-center">
    <h2><%= @animal.common_name %></h2>
      <div class="line text-center">
        <hr>
      </div>
    <p><i><%= @animal.latin_name %></i></p>
    <%= image_tag @animal.image %><br>
    <div class= 'description'>
      <% if @animal.description != nil %>
        <p><%= @animal.description.gsub(/ \(Ref\.(.(\w|,|\s)*)\)/, "").html_safe %></p>
      <% end %>
    </div>
    <div id="map"
      data-withmarker="false"
      style="width: 100%; height: 200px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
  </div>
</div>
    <%= render 'shared/footer' %>

